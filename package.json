{
  "name": "any-funder",
  "version": "1.0.0",
  "description": "Decentralized sponsorship and funding app for anyone",
  "files": [
    "contracts/",
    "abis/"
  ],
  "scripts": {
    "build": "yarn hardhat:compile && yarn copy-abis",
    "format": "prettier --write \"./**/*.{ts,tsx,json,md,sol}\"",
    "lint": "solhint 'contracts/**/*.sol'",
    "clean": "yarn hardhat:clean && rimraf artifacts dist typechain abi build",
    "test": "hardhat test",
    "analyze": "slither .",
    "copy-abis": "ts-node copy-abis.ts",
    "hardhat:compile": "hardhat compile",
    "hardhat:clean": "hardhat clean",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@uniswap/v3-periphery": "^1.4.1",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.9",
    "hardhat": "^2.9.9",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.8.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
